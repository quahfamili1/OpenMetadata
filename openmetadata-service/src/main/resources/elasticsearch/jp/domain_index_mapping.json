{
  "settings": {
    "index": {
      "max_ngram_diff": 17
    },
    "analysis": {
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": [
            "lowercase"
          ]
        }
      },
      "analyzer": {
        "om_analyzer_jp" : {
          "tokenizer" : "kuromoji_tokenizer",
          "type" : "custom",
          "filter" : [
            "kuromoji_baseform",
            "kuromoji_part_of_speech",
            "kuromoji_number",
            "kuromoji_stemmer"
          ]
        },
        "om_ngram": {
          "tokenizer": "ngram",
          "min_gram": 3,
          "max_gram": 10,
          "filter": [
            "lowercase"
          ]
        }
      },
      "filter": {
        "om_stemmer": {
          "type": "stemmer",
          "name": "english"
        }
      }
    }
  },
  "mappings": {
